{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [
      "react"
    ],
    "paths": {
      "@": [
        "./"
      ],
      "@/": [
        "src/"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src",
    "src/pages",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
